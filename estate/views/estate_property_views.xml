<odoo>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field string="Title" name="name"/>
                <field name="tags_ids"/>
                <field string="Property Type" name="property_type_id"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field string="Living Area (sqm)" name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field string="Available From" name="date_availability"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <header>
                    <button name="action_property_sold" type="object" string="SOLD" invisible="state in ('sold', 'canceled')"/>
                    <button name="action_property_canceled" type="object" string="CANCEL" invisible="state in ('sold','canceled')"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                            <field string="Tags" name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </h1>
                    </div>
                    <group col="2">
                        <group>
                            <field name="property_type_id" options="{'no_create': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price" string="Best Offer"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field string="Living Area (sqm)" name="living_area"/>
                                <field string="Total Area (sqm)" name="total_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="not garden"/>
                                <field name="garden_orientation" invisible="not garden"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids" readonly="state in ('sold', 'canceled')">
                                    <tree string="Offers">
                                        <field name="partner_id"/>
                                        <field name="price"/>
                                        <field name="status"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="seller_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="price"/>
                <field name="status"/>
                <field name="partner_id"/>
                <button name="action_accept_offer" type="object" string="ACCEPT" icon="fa-check" invisible="status != 'new'"/>
                <button name="action_refuse_offer" type="object" string="REFUSE" invisible="status != 'new'"/>
            </tree>
        </field>
    </record>

    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property">
                <field name="name" string="Title" />
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
                <filter string="Available" name="date_availability" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer received')]"/>
            </search>
        </field>
    </record>
</odoo>